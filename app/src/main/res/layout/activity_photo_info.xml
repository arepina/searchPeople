<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gaya.searchpeople.PhotoInfoActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="209dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="111dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/bAddPhoto"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/bAddPhoto" />

    <Button
        android:id="@+id/bAddPhoto"
        android:layout_width="205dp"
        android:layout_height="47dp"
        android:text="Add photo"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/etComment"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/etComment" />

    <EditText
        android:id="@+id/etComment"
        android:layout_width="331dp"
        android:layout_height="118dp"
        android:ems="10"
        android:hint="You can add any comment here"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="40dp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/bAddPhoto"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/bNext"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/bNext"/>

    <Button
        android:id="@+id/bNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/etComment"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="150dp"
        app:layout_constraintVertical_bias="0.489"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
